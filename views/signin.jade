extends layout

block content
  body(style="background-color:#F0F0F0;position:relative;top:6%")
    h3(style="text-align:center;color:#666699;font-size:35px") 登录
    form.ui.form(
		style="left:41%"
		action="/signin"
		method='post'
    )
      div.field
        br
        lable(style="font-weight:bold;color:#585858") 用户:
        br
        input(name="username",placeholder="用户名",style="width:250px")
        br
      div.field
        lable(style="font-weight:bold;color:#585858") 密码:
        br
        input(name="password",placeholder="密码",type="password",style="width:250px")
        br
      div
         button.ui.blue.basic.button(type="submit") 登录
         a(href="/signup") 没有账号？点此处注册